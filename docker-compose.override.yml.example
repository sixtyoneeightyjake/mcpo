# This file should NOT be committed to version control

version: '3.8'

services:
  mcpo:
    # Override the image with your actual DockerHub username
    image: yourusername/mcpo:latest
    
    environment:
      # Replace with your actual Tavily API key
      - TAVILY_API_KEY=tvly-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
      
      # Optional: Add other environment variables
      # - NODE_ENV=production
      # - LOG_LEVEL=info
    
    # Optional: Override ports if needed
    # ports:
    #   - "8080:8000"
    
    # Optional: Add volume mounts for custom configs
    # volumes:
    #   - ./custom-config.json:/app/config.json:ro
    #   - ./logs:/app/logs
    
    # Optional: Add labels for monitoring/management
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.mcpo.rule=Host(`your-domain.com`)"
      - "traefik.http.services.mcpo.loadbalancer.server.port=8000"
      
